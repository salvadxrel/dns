<Window x:Class="dns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DNS" Height="800" Width="460" MinHeight="800" MinWidth="460"
        WindowStartupLocation="CenterScreen"
        FontFamily="Roboto"
        Icon="/Resources/Images/logo.png"
        Background="{StaticResource ResourceKey=BgBrush}">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F0F9FF" Offset="0.0"/>
                <GradientStop Color="#E0F2FE" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">

            <TextBlock FontSize="28" FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,32">
                <TextBlock.Foreground>
                    <SolidColorBrush Color="{StaticResource AccentColor}"/>
                </TextBlock.Foreground>
            </TextBlock>

            <Border Background="White"
                    CornerRadius="16"
                    Padding="32">

                <StackPanel x:Name="FormPanel">

                    <TextBlock x:Name="HeaderTitle" Style="{StaticResource HeaderTitleStyle}"/>
                    <TextBlock x:Name="HeaderSubtitle" Style="{StaticResource HeaderSubtitleStyle}"/>

                    <Rectangle Height="24"/>

                    <StackPanel x:Name="FullNamePanel" Visibility="Collapsed">
                        <Label Content="Логин"/>
                        <Grid>
                            <TextBox x:Name="FullNameBox" Style="{StaticResource AuthInputStyle}"/>
                        </Grid>
                        <TextBlock x:Name="FullNameError" Style="{StaticResource ErrorTextStyle}"/>
                        <Rectangle Height="16"/>
                    </StackPanel>

                    <Label Content="Электронная почта"/>
                    <Grid>
                        <TextBox x:Name="EmailBox" Style="{StaticResource AuthInputStyle}"/>
                    </Grid>
                    <TextBlock x:Name="EmailError" Style="{StaticResource ErrorTextStyle}"/>
                    <Rectangle Height="16"/>

                    <Label Content="Пароль"/>
                    <Grid>
                        <PasswordBox x:Name="PasswordBox" Style="{StaticResource AuthPasswordBoxStyle}"/>
                    </Grid>
                    <TextBlock x:Name="PasswordError" Style="{StaticResource ErrorTextStyle}"/>
                    <Rectangle Height="16"/>

                    <StackPanel x:Name="ConfirmPanel" Visibility="Collapsed">
                        <Label Content="Повторите пароль"/>
                        <Grid>
                            <PasswordBox x:Name="ConfirmPasswordBox" Style="{StaticResource AuthPasswordBoxStyle}"/>
                        </Grid>
                        <TextBlock x:Name="ConfirmError" Style="{StaticResource ErrorTextStyle}"/>
                        <Rectangle Height="16"/>
                    </StackPanel>

                    <Button x:Name="SubmitButton" Style="{StaticResource AuthButtonStyle}" Click="SubmitButton_Click" Margin="0,8" >
                    </Button>

                    <TextBlock HorizontalAlignment="Center" FontSize="14" Margin="0,24,0,0">
                        <Run x:Name="TogglePrefix" Text="Нет аккаунта? "/>
                        <Hyperlink x:Name="ToggleLink" Foreground="{StaticResource AccentBrush}"
                                   Click="ToggleLink_Click" FontWeight="Medium">
                        </Hyperlink>
                    </TextBlock>

                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
