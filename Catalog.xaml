<Window x:Class="dns.Catalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Каталог — DNS" Height="800" Width="1500" MinHeight="900" MinWidth="1515"
        FontFamily="Roboto"
        Background="#F8FAFC">

    <Window.Resources>
        <!-- Цвета -->
        <Color x:Key="BgColor">#FFFFFF</Color>
        <Color x:Key="TextPrimaryColor">#1F2937</Color>
        <Color x:Key="TextSecondaryColor">#4B5563</Color>
        <Color x:Key="AccentColor">#1E40AF</Color>
        <Color x:Key="AccentLightColor">#3B82F6</Color>
        <Color x:Key="CardBgColor">#F9FAFB</Color>
        <Color x:Key="BorderColor">#E5E7EB</Color>
        <Color x:Key="DangerColor">#EF4444</Color>

        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLightColor}"/>
        <SolidColorBrush x:Key="CardBgBrush" Color="{StaticResource CardBgColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>

        <!-- Стили -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Roboto"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>

        <Style x:Key="FilterTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Width="120">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FindButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="8" Margin="0 0 0 0" Width="120">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CardBgBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentLightBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CartButtonStyle" TargetType="Button" BasedOn="{StaticResource OutlineButtonStyle}">
            <Setter Property="Content" Value="🛒 Корзина"/>
        </Style>

        <Style x:Key="CategoryCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CardBgBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Новый стиль для ComboBox -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter x:Name="contentPresenter" Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding ItemTemplate}"
                                                      ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                                      Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <Path Grid.Column="1" Data="M 0 0 L 4 4 L 8 0 Z" Fill="{StaticResource TextSecondaryBrush}"
      HorizontalAlignment="Center" VerticalAlignment="Center" Width="10" Height="10" Margin="0 5 0 0"/>
                                </Grid>
                            </Border>
                            <ToggleButton x:Name="toggleButton" Grid.Column="1"
                                          Focusable="False" ClickMode="Press"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="Transparent" BorderBrush="Transparent" BorderThickness="1"
                                          Margin="0" Padding="10">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent"/>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Popup x:Name="PART_Popup" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom" Focusable="False" AllowsTransparency="True">
                                <Border Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                        CornerRadius="8" Margin="0,4,0,0" Padding="0,4">
                                    <ScrollViewer>
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CardBgBrush}"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CardBgBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ProductCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="4" Color="#00000020"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-4"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="24" ShadowDepth="6" Color="#00000030"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Навигация -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="50,20,40,0">
            <TextBlock FontSize="14">
                <Hyperlink Foreground="{StaticResource AccentBrush}" Click="HomeLink_Click">Главная</Hyperlink>
                <Run Text=" / "/>
                <Run Text="Каталог" FontWeight="Medium"/>
            </TextBlock>
        </StackPanel>

        <!-- Кнопки профиля и корзины -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,40,0">
            <Button x:Name="ProfileButton" Content="👤 Профиль" Style="{StaticResource OutlineButtonStyle}"
                    Click="ProfileButton_Click" Width="120" Margin="0,0,12,0"/>
            <Button x:Name="CartButton" Style="{StaticResource CartButtonStyle}"
                    Click="CartButton_Click" Width="140"/>
        </StackPanel>

        <!-- Основная часть -->
        <Grid Grid.Row="1" Margin="40,10,40,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Фильтры -->
            <Border Grid.Column="0" Background="White" CornerRadius="16" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Категории -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Style="{StaticResource FilterTitleStyle}">Категории</TextBlock>
                            <Button Content="Сбросить" Foreground="{StaticResource AccentBrush}"
                                    Background="Transparent" BorderBrush="Transparent"
                                    Click="ResetCategories_Click" FontSize="12" Padding="0" Margin="10,2,0,0"/>
                        </StackPanel>

                        <CheckBox x:Name="AllCategory" Content="Все товары" IsChecked="True"
                                  Style="{StaticResource CategoryCheckBoxStyle}"
                                  Checked="CategoryCheckBox_Checked" Unchecked="CategoryCheckBox_Unchecked" Width="200" HorizontalAlignment="Left"/>

                        <CheckBox x:Name="VideoCardsCategory" Content="Видеокарты"
                                  Style="{StaticResource CategoryCheckBoxStyle}"
                                  Checked="CategoryCheckBox_Checked" Unchecked="CategoryCheckBox_Unchecked" Width="200" HorizontalAlignment="Left"/>
                        <CheckBox x:Name="ProcessorsCategory" Content="Процессоры"
                                  Style="{StaticResource CategoryCheckBoxStyle}"
                                  Checked="CategoryCheckBox_Checked" Unchecked="CategoryCheckBox_Unchecked" Width="200" HorizontalAlignment="Left"/>
                        <CheckBox x:Name="RAMCategory" Content="Оперативная память"
                                  Style="{StaticResource CategoryCheckBoxStyle}"
                                  Checked="CategoryCheckBox_Checked" Unchecked="CategoryCheckBox_Unchecked" Width="200" HorizontalAlignment="Left"/>
                        <CheckBox x:Name="StorageCategory" Content="Накопители"
                                  Style="{StaticResource CategoryCheckBoxStyle}"
                                  Checked="CategoryCheckBox_Checked" Unchecked="CategoryCheckBox_Unchecked" Width="200" HorizontalAlignment="Left"/>
                        <CheckBox x:Name="MotherboardsCategory" Content="Материнские платы"
                                  Style="{StaticResource CategoryCheckBoxStyle}"
                                  Checked="CategoryCheckBox_Checked" Unchecked="CategoryCheckBox_Unchecked" Width="200" HorizontalAlignment="Left"/>
                        <CheckBox x:Name="PSUCategory" Content="Блоки питания"
                                  Style="{StaticResource CategoryCheckBoxStyle}"
                                  Checked="CategoryCheckBox_Checked" Unchecked="CategoryCheckBox_Unchecked" Width="200" HorizontalAlignment="Left"/>
                        <CheckBox x:Name="CasesCategory" Content="Корпуса"
                                  Style="{StaticResource CategoryCheckBoxStyle}"
                                  Checked="CategoryCheckBox_Checked" Unchecked="CategoryCheckBox_Unchecked" Width="200" HorizontalAlignment="Left"/>

                        <!-- Бренды -->
                        <TextBlock Text="Бренды" Style="{StaticResource FilterTitleStyle}" Margin="0,24,0,8"/>
                        <CheckBox x:Name="NVIDIABrand" Content="NVIDIA" Style="{StaticResource CategoryCheckBoxStyle}"
                                  Checked="BrandCheckBox_Checked" Unchecked="BrandCheckBox_Unchecked" Width="200" HorizontalAlignment="Left"/>
                        <CheckBox x:Name="AMDBrand" Content="AMD" Style="{StaticResource CategoryCheckBoxStyle}"
                                  Checked="BrandCheckBox_Checked" Unchecked="BrandCheckBox_Unchecked" Width="200" HorizontalAlignment="Left"/>
                        <CheckBox x:Name="IntelBrand" Content="Intel" Style="{StaticResource CategoryCheckBoxStyle}"
                                  Checked="BrandCheckBox_Checked" Unchecked="BrandCheckBox_Unchecked" Width="200" HorizontalAlignment="Left"/>
                        <CheckBox x:Name="MSIBrand" Content="MSI" Style="{StaticResource CategoryCheckBoxStyle}"
                                  Checked="BrandCheckBox_Checked" Unchecked="BrandCheckBox_Unchecked" Width="200" HorizontalAlignment="Left"/>
                        <CheckBox x:Name="ASUSBrand" Content="ASUS" Style="{StaticResource CategoryCheckBoxStyle}"
                                  Checked="BrandCheckBox_Checked" Unchecked="BrandCheckBox_Unchecked" Width="200" HorizontalAlignment="Left"/>

                        <!-- Цена -->
                        <TextBlock Text="Цена" Style="{StaticResource FilterTitleStyle}" Margin="0,24,0,8"/>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBox x:Name="MinPriceTextBox" Width="83" Height="36" Text="0"
                                         Padding="8" FontSize="14" BorderBrush="{StaticResource BorderBrush}"/>
                                <TextBlock Text=" — " VerticalAlignment="Center" Margin="8,0"/>
                                <TextBox x:Name="MaxPriceTextBox" Width="83" Height="36" Text="1000000"
                                         Padding="8" FontSize="14" BorderBrush="{StaticResource BorderBrush}"/>
                            </StackPanel>
                            <Button Content="Применить" Style="{StaticResource PrimaryButtonStyle}"
                                    Height="36" Click="ApplyPriceFilter_Click" Width="200" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Товары -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Поиск + Сортировка -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,24">
                    <Border Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <Grid Width="320">
                            <TextBox x:Name="SearchBox" Padding="40,0,70,0" Height="42" FontSize="14"
                                     Background="Transparent" BorderThickness="0"
                                     TextChanged="SearchBox_TextChanged"/>
                            <TextBlock Text="Поиск товаров..." Foreground="{StaticResource TextSecondaryBrush}"
                                       IsHitTestVisible="False" Margin="40,0,0,0" VerticalAlignment="Center" Opacity="0.7">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Path Data="M21.5 20L16.75 15.25M18.5 11.5C18.5 15.6421 15.1421 19 11 19C6.85786 19 3.5 15.6421 3.5 11.5C3.5 7.35786 6.85786 4 11 7C15.1421 4 18.5 7.35786 18.5 11.5Z"
                                  Stretch="Uniform" Width="18" Height="18" Fill="{StaticResource TextSecondaryBrush}"
                                  Margin="12,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Button Content="Найти" Width="70" HorizontalAlignment="Right"
                                    Style="{StaticResource FindButtonStyle}" Click="SearchButton_Click"/>
                        </Grid>
                    </Border>

                    <!-- Применяем новый стиль -->
                    <ComboBox x:Name="SortComboBox" Width="200" Margin="16,0,0,0"
                              SelectionChanged="SortComboBox_SelectionChanged"
                              Style="{StaticResource ComboBoxStyle}">
                        <ComboBoxItem Content="Популярные" IsSelected="True"/>
                        <ComboBoxItem Content="Новинки"/>
                        <ComboBoxItem Content="Цена: по возрастанию"/>
                        <ComboBoxItem Content="Цена: по убыванию"/>
                        <ComboBoxItem Content="По рейтингу"/>
                    </ComboBox>
                </StackPanel>

                <!-- Счётчик найденных -->
                <TextBlock Grid.Row="1" Margin="0,0,0,16">
                    <Run Text="Найдено: "/>
                    <Run x:Name="FoundCountRun" Text="0 товаров" FontWeight="SemiBold"/>
                </TextBlock>

                <!-- Список товаров + Пагинация -->
                <!-- Список товаров + Пагинация -->
                <Grid Grid.Row="2" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ПРОКРУЧИВАЕМАЯ область с товарами -->
                    <ScrollViewer Grid.Row="0" 
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="0,0,10,20">
                        <WrapPanel x:Name="ProductsGrid" 
                   Orientation="Horizontal"
                   HorizontalAlignment="Left"
                   Margin="10,10,0,10"/>
                    </ScrollViewer>

                    <!-- Пагинация — всегда внизу и не прокручивается -->
                    <StackPanel Grid.Row="1" 
                Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Margin="0,10,0,30"
                Background="Transparent">
                        <Button Content="Предыдущая" 
                x:Name="PrevPageButton" 
                Click="PrevPageButton_Click"
                Style="{StaticResource OutlineButtonStyle}" 
                Width="140" Margin="0,0,8,0"/>
                        <TextBlock x:Name="PageInfoText" 
                   VerticalAlignment="Center" 
                   FontSize="14" 
                   Margin="16,0"
                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <Button Content="Следующая" 
                x:Name="NextPageButton" 
                Click="NextPageButton_Click"
                Style="{StaticResource OutlineButtonStyle}" 
                Width="140" Margin="8,0,0,0"/>
                    </StackPanel>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Window>